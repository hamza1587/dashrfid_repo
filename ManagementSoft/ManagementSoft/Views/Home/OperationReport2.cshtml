@model IEnumerable<DataLib.Entities.TimeSpentOperations>
@{
    ViewData["Title"] = "Operations Report";
    Layout = "~/Views/Shared/adminlayout.cshtml";
}
<form role="form" id="quickForm" asp-action="OperationReport">
    <div class="card-body">
        <form action="@Url.Action("Home","OperationReport2")" method="post">
            <div class="row">
                <div class="col-md-2">
                    <label for="fromdate" class="control-label">From Date</label>
                    <input type="date" id="fromdate" name="FromDate" required class="form-control" />
                </div>
                <div class="col-md-2">
                    <label for="todate" class="control-label">To Date</label>
                    <input type="date" id="todate" name="ToDate" required class="form-control" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success" style="margin-top:31px;" value="Export to Excel">Search &nbsp;<i class="fas fa-search"> </i></button>
                </div>
            </div>
        </form>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"></h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="tbloperation" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Body</th>
                            <th>Seq</th>
                            <th>Waiting</th>
                            <th>Repairing</th>
                            <th>Spare Parts</th>
                            <th>Confirming</th>
                            <th>Returning</th>
                            <th>Outside</th>
                            <th>Offline time</th>
                            <th>OTD</th>

                        </tr>
                    </thead>
                    <tbody>
                        @*@foreach (var item in Model)
                        {*@
                            <tr>
                                <td>MKDHH98421</td>
                                <td>123</td>
                                <td>@DateTime.Now.ToString("hh:mm:ss")</td>
                                <td>@DateTime.Now.ToString("hh:mm:ss")</td>
                                <td>@DateTime.Now.ToString("hh:mm:ss")</td>
                                <td>@DateTime.Now.ToString("hh:mm:ss")</td>
                                <td>@DateTime.Now.ToString("hh:mm:ss")</td>
                                <td>@DateTime.Now.ToString("hh:mm:ss")</td>
                                <td>@DateTime.Now.ToString("hh:mm:ss")</td>
                                <td>0 hrs 33 min</td>
                            </tr>
                        @*}*@
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
    </div>

</form>

@section Scripts{
    <script>
        $(function () {
            $("#tbloperation").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#tbloperation_wrapper .col-md-6:eq(0)');
            $('#example1').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>
}
